<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:orientation="vertical"
                tools:context=".LinearLayout" 
                android:background="#F2F2F2"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                >

<ImageView
    android:layout_marginTop="10dp"
    android:id="@+id/profileView"
    android:layout_width="110dp"
    android:layout_height="75dp"
    android:layout_marginLeft="20dp"
    android:cropToPadding="true"
    android:src="@drawable/no_profile" 
    />

<TextView
    android:id="@+id/profileViewText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/profileView"
    android:layout_alignRight="@+id/profileView"
    android:layout_alignBottom="@+id/profileView"
    android:gravity="center"
    android:text="Edit"
    android:textSize="8dp"
    android:textColor="#000000"
    android:background="#7F000000" 
  />



<LinearLayout 
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:gravity="center"
android:orientation="horizontal" 
android:layout_marginTop="120dp"
>

<View
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:layout_weight="1"
    android:background="#78133a"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
     />

</LinearLayout>

<TextView
    android:id="@+id/profileName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignTop="@+id/profileView"
    android:layout_marginLeft="20dp"
    android:layout_toRightOf="@+id/profileView"
    android:gravity="left"
    android:text="Name of User                                      . "
    android:textSize="20dp"
    android:textStyle="bold" />

<TextView
    android:id="@+id/profileStatus"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/profileName"
    android:layout_below="@+id/profileName"
    android:layout_toEndOf="@+id/profileName"
    android:gravity="left"
    android:text="Current status of the User........."
    android:textSize="15dp"
    android:textStyle="bold" />

<TextView
    android:id="@+id/profileCity"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/profileStatus"
    android:layout_below="@+id/profileStatus"
    android:layout_toEndOf="@+id/profileName"
    android:gravity="left"
    android:text="Where user lives"
    android:textSize="12dp"
     />

</RelativeLayout>